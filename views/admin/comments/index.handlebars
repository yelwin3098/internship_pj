<div class="container-fluid">
<div class="row">
     <div class="col-12">
    <div class="card">
                            <div class="card-body">
                                <h5 class="card-title">All Posts</h5>
                                <div class="table-responsive">
                                    <table id="zero_config" class="table table-striped table-bordered">
                                        <thead>
                                            <tr>
                                                <th>Id</th>
                                                <th>Publisher</th>
                                                <th>Date</th>
                                                <th>Approve Comments</th>
                                                <th>Comment Body</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            {{#each comments}}
                                             <tr>
                                                 <td>{{id}}</td>
                                                 <td style="width:auto;">{{user.firstName}} {{user.lastName}}</td>
                                                 <td>{{date}}</td>
                                                 <td>{{commentIsApproved}}</td>
                                                <td>{{body}}</td>
                                             </tr>
                                            {{/each}}
                                        </tbody>
                                    </table>
                                </div>

                            </div>
                        </div>
                        </div>
</div>
</div>